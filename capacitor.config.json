{
  "appId": "com.almarsad.app",
  "appName": "Al Marsad",
  "webDir": "dist",
  "plugins": {
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#000000"
    },
    "ScreenOrientation": {
      "defaultOrientation": "landscape"
    },
    "SplashScreen": {
      "launchAutoHide": true,
      "backgroundColor": "#000000",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    }
  }
}
